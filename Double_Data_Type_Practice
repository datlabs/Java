/*
Get 3 double values from the keyboard. Sum the three values. 
Output the sum, square of the sum, cube of the sum, and the average of all three numbers. 
*/

package exam_1_data_types_operator_decisions;
import java.util.Scanner;

public class Exam_1_Data_Types_Operator_Decisions 
{
    public static void main(String[] args) 
    {
        double num1, num2, num3, sum;
        Scanner in = new Scanner(System.in);

        System.out.println("Enter 3 numbers follow:");

        System.out.print("Number 1 = ");
        num1 = in.nextDouble();

        System.out.print("Number 2 = ");
        num2 = in.nextDouble();

        System.out.print("Number 3 = ");
        num3 = in.nextDouble();

        sum = num1 + num2 + num3;

        // Output the sum, square of the sum, cube of the sum, and the average of all three numbers.
        System.out.println("Sum of 3 numbers = " + sum);
        System.out.println("Square of the sum = " + (sum * sum));
        System.out.println("Average of 3 numbers = " + (sum / 3));
    }
}
